kind: Cluster
apiVersion: kind.x-k8s.io/v1alpha4
networking:
  # Use IPv4 for simplicity and compatibility
  ipFamily: ipv4
  # Keep default CNI for e2e testing
  disableDefaultCNI: false
  # Configure pod and service subnets (Kind defaults)
  podSubnet: "10.244.0.0/16"
  serviceSubnet: "10.96.0.0/12"
nodes:
# Control plane node with port mappings for external access
- role: control-plane
  # Expose ports for accessing services from host during debugging
  extraPortMappings:
  # HTTP server port for external testing (NodePort range)
  - containerPort: 30080
    hostPort: 8080
    protocol: TCP
  # gRPC server port for external testing (NodePort range)
  - containerPort: 30443
    hostPort: 8443
    protocol: TCP
  # Additional port for mock services
  - containerPort: 30090
    hostPort: 9090
    protocol: TCP
  # Configure node for e2e testing
  kubeadmConfigPatches:
  - |
    kind: InitConfiguration
    nodeRegistration:
      kubeletExtraArgs:
        node-labels: "ingress-ready=true"
        # Increase log verbosity for debugging
        v: "2"
  - |
    kind: ClusterConfiguration
    apiServer:
      extraArgs:
        # Enable required admission plugins
        enable-admission-plugins: NodeRestriction,MutatingAdmissionWebhook,ValidatingAdmissionWebhook
        # Increase audit log verbosity for debugging
        audit-log-maxage: "30"
        audit-log-maxbackup: "3"
        audit-log-maxsize: "100"
        v: "2"
    controllerManager:
      extraArgs:
        v: "2"
    scheduler:
      extraArgs:
        v: "2"
# Worker nodes for realistic multi-node testing
- role: worker
  labels:
    node-type: worker
    e2e-test: "true"
  kubeadmConfigPatches:
  - |
    kind: JoinConfiguration
    nodeRegistration:
      kubeletExtraArgs:
        v: "2"
- role: worker
  labels:
    node-type: worker
    e2e-test: "true"
  kubeadmConfigPatches:
  - |
    kind: JoinConfiguration
    nodeRegistration:
      kubeletExtraArgs:
        v: "2"
